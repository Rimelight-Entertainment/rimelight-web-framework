{
  "extends": [
    "github>nuxt/renovate-config-nuxt"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "baseBranches": ["v2", "v3"],
  "packageRules": [{
    "matchBaseBranches": ["v3"],
    "labels": ["v3"]
  }, {
    "groupName": "tailwindcss",
    "matchPackageNames": [
      "tailwindcss",
      "@tailwindcss/postcss",
      "@tailwindcss/vite"
    ]
  }, {
    "groupName": "reka-ui",
    "matchPackageNames": [
      "reka-ui",
      "vaul-vue"
    ]
  }, {
    "matchDepTypes": ["peerDependencies"],
    "enabled": false
  }, {
    "matchDepTypes": ["resolutions"],
    "enabled": false
  }],
  "postUpdateOptions": ["pnpmDedupe"]
}
