{
  "extends": [
    "github>nuxt/renovate-config-nuxt"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "baseBranchPatterns": [
    "v2",
    "v3"
  ],
  "ignoreDeps": [
    "@nuxt/module-builder",
    "tailwind-variants",
    "typescript"
  ],
  "packageRules": [
    {
      "matchBaseBranches": [
        "v3"
      ],
      "labels": [
        "v3"
      ]
    },
    {
      "groupName": "tailwindcss",
      "matchPackageNames": [
        "tailwindcss",
        "@tailwindcss/postcss",
        "@tailwindcss/vite"
      ]
    },
    {
      "groupName": "reka-ui",
      "matchPackageNames": [
        "reka-ui",
        "vaul-vue"
      ]
    },
    {
      "groupName": "vite",
      "matchPackageNames": [
        "vite",
        "@vitejs/plugin-vue"
      ]
    },
    {
      "groupName": "vue-tsc",
      "matchPackageNames": [
        "vue-tsc",
        "vue-component-type-helpers"
      ]
    },
    {
      "matchDepTypes": [
        "peerDependencies"
      ],
      "enabled": false
    },
    {
      "matchDepTypes": [
        "resolutions"
      ],
      "enabled": false
    }
  ],
  "postUpdateOptions": [
    "pnpmDedupe"
  ]
}
